{% extends 'base.html.twig' %}

{% block title "Catégorie #" ~ categorie.id %}

{% block body %}
    <h1>Cette catégorie possède {{ categorie.articles | length }} articles</h1>
    {% for article in categorie.articles %}
        <div class="card mb-3">
            <h5 class="card-header">{{ article.title }}</h5>
            <div class="card-body">
                {# <h5 class="card-title">Special title treatment</h5> #}
                <p class="card-text">{{ article.contenue }}</p>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <div>
                        4 <i class="fa-solid fa-thumbs-up"></i>
                        <i class="fa-regular fa-thumbs-up"></i>
                        <i class="fa-solid fa-comment"></i>
                    </div>
                    <div>
                        <small class="text-muted">Création : {{ article.createdAt | date('j M Y à H:m') }}</small> |
                        <small class="text-muted">Dernière midification : {{ article.createdAt | date('j M Y à H:m') }}</small>
                    </div>
                    <div>
                        <i class="fa-solid fa-user"></i> Tm
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
